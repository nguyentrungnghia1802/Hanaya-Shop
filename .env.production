# Production Environment Configuration for Hanaya Shop

# Application
APP_NAME="Hanaya Shop"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=hanaya_shop
DB_USERNAME=hanaya_user
DB_PASSWORD=

# Root password for MySQL (only for initial setup)
DB_ROOT_PASSWORD=

# Cache & Session
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@hanaya-shop.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security
BCRYPT_ROUNDS=12

# Performance
OCTANE_SERVER=swoole

# Social Authentication (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=

# CDN Configuration (Optional)
CDN_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# TinyMCE API Key
TINYMCE_API_KEY=
